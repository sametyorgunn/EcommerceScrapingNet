@using EntityLayer.Dto.ResponseDto
@model List<ProductDto>
<table class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer" id="kt_table_users">
	<thead>
		<tr class="text-start text-muted fw-bolder fs-7 text-uppercase gs-0">
			<th class="w-10px pe-2 sorting_disabled" rowspan="1" colspan="1" aria-label="" style="width: 29.25px;">
				<div class="form-check form-check-sm form-check-custom form-check-solid me-3">
					<input class="form-check-input" type="checkbox" value="" data-kt-check="true" data-kt-check-target="#kt_table_users .form-check-input">
				</div>
			</th>
			<th class="min-w-125px sorting" tabindex="0" aria-controls="kt_table_users" rowspan="1" colspan="1" aria-label="User: activate to sort column ascending" style="width: 239.6px;">Ürün</th>
			<th class="min-w-125px sorting" tabindex="0" aria-controls="kt_table_users" rowspan="1" colspan="1" aria-label="Two-step: activate to sort column ascending" style="width: 134.137px;">Fiyat</th>
			<th class="min-w-125px sorting" tabindex="0" aria-controls="kt_table_users" rowspan="1" colspan="1" aria-label="Joined Date: activate to sort column ascending" style="width: 143.312px;">Puanı</th>
			<th class="min-w-125px sorting" tabindex="0" aria-controls="kt_table_users" rowspan="1" colspan="1" aria-label="Joined Date: activate to sort column ascending" style="width: 143.312px;">Durumu</th>
			<th class="text-end min-w-100px sorting_disabled" rowspan="1" colspan="1" aria-label="Actions" style="width: 106.125px;">Eylemler</th>
		</tr>
	</thead>
	<tbody class="text-gray-600 fw-bold">
		@foreach (var i in Model)
		{
			<tr class="odd">
				<td>
					<div class="form-check form-check-sm form-check-custom form-check-solid">
						<input class="procheck form-check-input" type="checkbox" value="@i.Id">
					</div>
				</td>
				<td class="d-flex align-items-center">
					<div class="symbol symbol-circle symbol-50px overflow-hidden me-3">
						<img src="@i.ProductImage" />
					</div>
					<div class="d-flex flex-column">
						<a href="#" class="text-gray-800 text-hover-primary mb-1">@i.ProductName</a>
						<span>@i.ProductBrand</span>
					</div>
				</td>
				<td>@i.ProductPrice</td>
				
				<td>
					<div class="badge badge-light-success fw-bolder">@i.ProductRating</div>
				</td>
				<td>
					<div class="badge badge-light-success fw-bolder">@(i.Status == true ? "Aktif" : "Pasif")</div>
				</td>
				<td class="text-end">
					<a href="#" class="btn btn-light btn-active-light-primary btn-sm" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
						Eylemler
						<span class="svg-icon svg-icon-5 m-0">
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
								<path d="M11.4343 12.7344L7.25 8.55005C6.83579 8.13583 6.16421 8.13584 5.75 8.55005C5.33579 8.96426 5.33579 9.63583 5.75 10.05L11.2929 15.5929C11.6834 15.9835 12.3166 15.9835 12.7071 15.5929L18.25 10.05C18.6642 9.63584 18.6642 8.96426 18.25 8.55005C17.8358 8.13584 17.1642 8.13584 16.75 8.55005L12.5657 12.7344C12.2533 13.0468 11.7467 13.0468 11.4343 12.7344Z" fill="black"></path>
							</svg>
						</span>
					</a>
					<div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-bold fs-7 w-125px py-4" data-kt-menu="true">
						<div class="menu-item px-3">
							<a onclick="GetProductDetail(@i.Id)" class="menu-link px-3">Düzenle</a>
						</div>
						<div class="menu-item px-3">
							<a href="/Admin/Product/DeleteProduct/@i.Id" class="menu-link px-3" data-kt-users-table-filter="delete_row">Sil</a>
						</div>
						<div class="menu-item px-3">
							<a href="/Admin/Product/MakeProductPassive/@i.Id" class="menu-link px-3" data-kt-users-table-filter="">Pasif Yap</a>
						</div>
						<div class="menu-item px-3">
							<a href="/Admin/Product/MakeProductActive/@i.Id" class="menu-link px-3" data-kt-users-table-filter="">Aktif Yap</a>
						</div>
					</div>
				</td>
			</tr>
		}	
	</tbody>
</table>